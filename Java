import java.io.*;
import java.util.Scanner;



public class FirstEx {

	
	//Question 1
	public static void printHello()
	{
		Scanner scany=new Scanner(System.in);
		System.out.println("please enter your name");
		String username=scany.nextLine();
		System.out.println("Hello " +username);
	}
	
	
	//question 4
	public static void aboveFifty(int num)
	{
		Scanner scany=new Scanner(System.in);
		System.out.println("please enter a number (I will tell you if lower or higher then 50");
		int number=scany.nextInt();
		if(number<50)
			{
			System.out.println("lower than 50");
			}
		else {
			System.out.println("higher than 50");
		}
		
	}
	
	// question 6
	public static boolean divideTwo(int num)
	{
		boolean flag;
		Scanner scany=new Scanner(System.in);
		System.out.println("please enter a number (will tell you if divided by 2");
		int number=scany.nextInt();
		if((number%2)==0)
		{
			
			System.out.println("the number can be divided by 2");
			flag=true;
		}
		else {
			System.out.println("the number canNOT be divided by 2");
			flag=false;
		}
		return flag;
		
	}
	
	
	
	// question 7
	public static void switchNumbers()
	{
		
		Scanner scany=new Scanner(System.in);
		System.out.println("please enter a number and i will return it's name");
		int digit=scany.nextInt();
		switch(digit) 
		{
		case 1: System.out.println("one");
			break;
		case 2: System.out.println("two");
		break;
		case 3: System.out.println("three");
		break;
		case 4: System.out.println("four");
		break;
		case 5: System.out.println("five");
		break;
		case 6: System.out.println("six");
		break;
		case 7: System.out.println("seven");
		break;
		
		default: System.out.println("not valid");
		}
	}
	
	
	//question 8
	
	public static int sumAndAverage (int[] array)
	{
		int[] myArray=array;
		int sum=0;
		int average=0;
		for(int i=0; i<myArray.length;i++)
		{
			sum=sum+myArray[i];
			
		}
		average=sum/myArray.length;
		
		return sum;
	}
	
	//question 9
	public static int[] returnArray (int[] Array)
	{
		int[] myArr=Array;
		
		
		return myArr;
	}
	
	//Question 10
	
	public static int findMyNumber(int[] Array, int number)
	{
		

		int i;
		int index;

		for(i=0; i<Array.length;i++)
		{
			if(Array[i]==number)
			{
				index=i;
			}
		}
		return i;
	}
	
	//Question 11
	
	public static boolean sameOrNot(int num, int num2)
	{
		if (num==num2) {
			return true;
		}
		else
		{
			return false;
		}
		
	}
	
	// Question 13
	
	public static void sortArray(int[] Array)
	{
		int temp=0;
		for (int i=1;i<Array.length;i++)
		{
			for(int j=1;j<Array.length;j++)
			{
				if (Array[j-1]>Array[j])
				{
					temp=Array[j-1];
					Array[j-1]=Array[j];
					Array[j]=temp;
				}
			}
			
		}
		
		for(int counter=0;counter<Array.length;counter++)
		{
			System.out.println(Array[counter]);
		}
	}
	
	
	
	//Question 14
	public static int fibonacci (int index)
	{
		int myFib[] = new int[15];
		myFib[0]=1;
		myFib[1]=1;
		int res=0;
		
		for(int i=2;i<myFib.length;i++)
		{
			myFib[i]=myFib[i-2]+myFib[i-1];
			System.out.println(myFib[i]);
			
		}
		
	public static void main(String[] args) {
		int[] myArr={34,2,131,23,1,55,3};
		printHello();
		aboveFifty(10);
		divideTwo(42);
		switchNumbers();
		int sumOfNumbers=sumAndAverage(myArr);
		System.out.println("the sum of the numbers is: ");
		System.out.println(sumOfNumbers);
		int res=findMyNumber(myArr,1000);
		System.out.println(res);
		sameOrNot(5,5);
		System.out.println("the SORTED array is: ");
		sortArray(myArr);
	
		

	}

}
